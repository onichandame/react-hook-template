{
  "private": true,
  "name": "react-hook-template",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^4.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.2"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format --staging"
    }
  },
  "scripts": {
    "dev": "nodemon",
    "format": "pretty-quick",
    "example": "yarn workspace example",
    "hook": "yarn workspace react-hook",
    "build": "yarn build:hook && yarn build:example",
    "build:hook": "yarn hook build",
    "build:example": "yarn example run build",
    "publish": "yarn hook publish"
  }
}
